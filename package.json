{
  "name": "node-auth-warden",
  "version": "0.0.1",
  "description": "A simple authentication library for Node.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "build": "rimraf dist/* && tsup lib/* lib/**/* --format cjs,esm --dts",
    "dev": "nodemon --watch lib -e ts,js,mjs,cjs,json --exec \"pnpm build\"",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "nodejs",
    "auth",
    "authentication"
  ],
  "author": "Touhid Tushar <tushartouhed@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.5",
    "tsup": "^7.2.0",
    "typescript": "5.1.6",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "**/*.{ts, json}": [
      "pnpm lint:fix",
      "pnpm format"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TouhidTushar/nodeauthwarden.git"
  }
}
